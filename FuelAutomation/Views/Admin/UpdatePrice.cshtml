
@model List< UpdatePriceViewModel>
<div class="content-page">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-4 align-items-center justify-content-center">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <div class="header-title">
                            <h4 class="card-title">Fiyatları Güncelle</h4>
                        </div>
                    </div>
                    <form asp-action="UpdatePrice" asp-controller="Admin" method="post">
                        @if (@TempData["Success"] != null)
                        {

                            <div class="alert alert-success">

                                <strong> Başarılı!</strong> @TempData["Success"]
                            </div>

                        }
                        @if (TempData["Fail"] != null)
                        {
                            <div class="alert alert-danger">

                                <strong> Hata!</strong> @TempData["Fail"]
                            </div>
                        }
                    <div class="card-body">

                            @{
                                int i = 0;
                                foreach (var item in @ViewBag.FuelTypes)

                                {

                                    <div class="form-group">
                                        <label asp-for=@Model[i].Name for="email">@item.Name</label>
                                        <input type="hidden" asp-for=@Model[i].Name value="@item.Name">
                                        <input asp-for="@Model[i].Price" class="form-control">
                                    </div>
                                    i++;
                                }


                            }
                            
                            
                            
                            
                           @* <div class="form-group">
                                <label for="email">LPG:</label>
                                <input asp-for="PriceLpg" class="form-control" >
                            </div>
                            <div class="form-group">
                                <label for="pwd">Motorin:</label>
                                <input asp-for="PriceDiesel" class="form-control" >
                            </div>*@
                      
                            <button type="submit" class="btn btn-primary">Güncelle</button>

                      
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>