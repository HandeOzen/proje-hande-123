
@model UserUpdateViewModel
<div class="content-page">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-4 align-items-center justify-content-center">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <div class="header-title">
                            <h4 class="card-title">Kullanıcı Düzenle</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (@TempData["Success"] != null)
                        {
                            <div class="alert alert-success">

                                <strong> Başarılı!</strong> @TempData["Success"]
                            </div>


                        }
                     
                        <form asp-action="UserEdit" asp-controller="Admin" method="post">
                            <div class="form-group">
                                <label for="email">Email Adresi:</label>
                                <input asp-for=Email value="@Model.Email" class="form-control">
                                <input asp-for="UserId" type="hidden" value="@Model.UserId" />
                            </div>
                            <div class="form-group">
                                <label for="email">İsim:</label>
                                <input asp-for=FirstName value="@Model.FirstName" class="form-control" >
                            </div>
                            <div class="form-group">
                                <label for="email">Soyisim:</label>
                                <input asp-for=LastName value="@Model.LastName" class="form-control" >
                            </div>
                            <div class="form-group">
                                <label for="pwd">Şifre:</label>
                                <input asp-for="Password" class="form-control" >
                            </div>
                            <div class="form-group">
                                <label>Yetki Seviyesi</label>
                                <select  asp-for="Role" class="form-control mb-3">
                                    <option value="0" disabled>Yetki Seviyesi Seçiniz</option>
                                    <option value="Admin">Admin</option>
                                    <option value="Staff">Staff</option>
                                   
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary">Düzenle</button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>